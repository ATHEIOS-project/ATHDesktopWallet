{
  "name": "Ether1Wallet",
  "version": "0.2.1",
  "description": "Desktop wallet for Ether1 currency",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "Ether1DesktopWallet",
    "files": [
      "modules/*",
      "assets/**/*",
      "renderer/*",
      "package.json",
      "main.js",
      "index.html"
    ],
    "win": {
      "icon": "build/icon.png",
      "target": "7z",
      "artifactName": "Windows-${productName}-${version}.${ext}",
      "extraResources": [
        "bin/win/*"
      ]
    },
    "linux": {
      "target": "tar.gz",
      "artifactName": "Linux-${productName}-${version}.${ext}",
      "extraResources": [
        "bin/linux/*"
      ]
    }
  },
  "repository": "https://github.com/taeguscromis/Ether1DesktopWallet",
  "keywords": [
    "Ether1",
    "Desktop",
    "Wallet"
  ],
  "author": "Ether1",
  "license": "CC0-1.0",
  "dependencies": {
    "adm-zip": "^0.4.13",
    "app-root-path": "^2.1.0",
    "electron-storage": "^1.0.7",
    "handlebars": "^4.0.12",
    "moment": "^2.23.0",
    "nedb": "^1.8.0",
    "open": "0.0.5",
    "single-instance": "0.0.1"
  },
  "devDependencies": {
    "electron": "^3.0.12",
    "electron-builder": "^20.38.3"
  }
}
